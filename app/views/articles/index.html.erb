<h1 style="text-decoration: underline; margin-top: 0;">Listing Articles</h1>

<%= link_to 'New Article', new_article_path %>
<br><br>
<table style="border: 1px solid black;">
	<tr>
		<th>
			<h3 style="margin: 0; 
					padding-top: 0; 
					text-decoration: underline;">
			Title</h3>
		</th>
		<th>
			<h3 style="margin: 0;
					padding-top: 0; 
					text-decoration: underline;">
			Text</h3>
		</th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td style="border-right: 1px dashed black; 
						text-align: center;
						padding-left: 10px;
						padding-right: 10px;
						font-weight: 800;">
				<%= article.title %>	
			</td>
			<td style="border-right: 1px dashed black; 
						text-align: center;
						padding-left: 10px;
						padding-right: 10px;">
				<%= article.text%>
			</td>
			<td style="border-right: 1px dashed lightgray; 
						text-align: center;
						padding: 5px;">
				<%= link_to 'Show', article_path(article) %>		
			</td>
			<td style="border-right: 1px dashed lightgray; 
						text-align: center;
						padding: 5px;">
				<%= link_to 'Edit', edit_article_path(article) %>
			</td>
			<td style="text-align: center;
						padding: 5px;">
				<%= link_to 'Destroy', article_path(article), 
										method: :delete, 
										data: { confirm: "Are you sure?" } %>
			</td>


		</tr>
	<% end %>
</table>